<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<BorderPane maxHeight="720" maxWidth="1280" minHeight="600" minWidth="800" prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/Styles.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.codetreatise.controller.GEController">
   <center>
      <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
         <content>
            <TableView fx:id="tablePedidos" opacity="0.7" prefWidth="50.0">
              <columns>
                    <TableColumn fx:id="tableColumNumero" styleClass="col-num" prefWidth="75.0" text="Numero" />
                    <TableColumn fx:id="tableColumTipo" prefWidth="75.0" text="Tipo" />
                    <TableColumn fx:id="tableColumCampana" prefWidth="75.0" text="Campaña" />
                    <TableColumn fx:id="tableColumComprador" prefWidth="150.0" text="Comprador" />
                    <TableColumn fx:id="tableColumDestino" prefWidth="150" text="Destino" />
                    <TableColumn fx:id="tableColumProveedor" prefWidth="150.0" text="Proveedor" />
                    <TableColumn fx:id="tableColumCalidad" styleClass="col-num" prefWidth="75.0" text="Calidad" />
                    <TableColumn fx:id="tableColumDescripcion" prefWidth="150.0" text="Descripcion" />
                    <TableColumn fx:id="tableColumMetrosPedidos" styleClass="col-num" prefWidth="85.0" text="M. Pedidos" />
                    <TableColumn fx:id="tableColumMetrosEntrados" styleClass="col-num" prefWidth="85.0" text="M. Entrados" />
                    <TableColumn fx:id="tableColumMetrosPendientes" styleClass="col-num" prefWidth="85.0" text="M. Pendientes" />
                    <TableColumn fx:id="tableColumFechaDisponible" prefWidth="100" text="F. Disponible" />
              </columns>
            </TableView>
         </content>
         <BorderPane.margin>
            <Insets top="5.0" />
         </BorderPane.margin>
      </ScrollPane>
   </center>
   <top>
      <Accordion>
        <panes>
          <TitledPane fx:id="paneFiltros" text="Filtros">
            <content>
              <AnchorPane>
                     <children>
                        <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <ToolBar style="-fx-background-color: none;">
                                 <items>
                                    <Label contentDisplay="RIGHT" text="Campaña">
                                       <graphic>
                                          <CheckComboBox fx:id="cmbCampana" prefWidth="110.0" />
                                       </graphic>
                                    </Label>
                                    <Label fx:id="lblCountCampanas" styleClass="lbl-count" text="0">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                       <padding>
                                          <Insets bottom="2.5" left="5.0" right="5.0" top="2.5" />
                                       </padding>
                                    </Label>
                                    <Label contentDisplay="RIGHT" text="Cadena">
                                       <graphic>
                                          <ComboBox fx:id="cmbCadena" prefWidth="110.0" styleClass="cmb" />
                                       </graphic>
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                    </Label>
                                    <Label contentDisplay="RIGHT" text="Destino">
                                       <graphic>
                                          <CheckComboBox fx:id="cmbDestinos" prefWidth="110.0" />
                                       </graphic>
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                    </Label>
                                     <Label fx:id="lblCountDestinos" styleClass="lbl-count" text="0">
                                         <font>
                                             <Font name="System Bold" size="12.0" />
                                         </font>
                                         <padding>
                                             <Insets bottom="2.5" left="5.0" right="5.0" top="2.5" />
                                         </padding>
                                     </Label>
                                    <Label contentDisplay="RIGHT" text="Pedido">
                                       <graphic>
                                          <TextField fx:id="txtPedido" styleClass="txt-number" />
                                       </graphic>
                                       <padding>
                                          <Insets left="5.0" right="5.0" />
                                       </padding>
                                    </Label>
                                    <Label contentDisplay="RIGHT" text="Proveedor">
                                       <graphic>
                                          <CheckComboBox fx:id="cmbProveedor" prefWidth="110.0" />
                                       </graphic>
                                    </Label>
                                    <Label fx:id="lblCountProveedores" styleClass="lbl-count" text="0">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                       <padding>
                                          <Insets bottom="2.5" left="5.0" right="5.0" top="2.5" />
                                       </padding>
                                    </Label>
                                    <Label contentDisplay="RIGHT" text="Metros p.">
                                       <graphic>
                                          <ComboBox fx:id="cmbOp" prefWidth="75.0" styleClass="cmb" />
                                       </graphic>
                                       <padding>
                                          <Insets left="5.0" />
                                       </padding>
                                    </Label>
                                    <TextField fx:id="txtMetros" styleClass="txt-number" />
                                 </items>
                                 <VBox.margin>
                                    <Insets />
                                 </VBox.margin></ToolBar>
                              <ToolBar orientation="VERTICAL" style="-fx-background-color: none;">
                                 <items>
                                    <ButtonBar>
                                       <buttons>
                                          <Button fx:id="btnLimpar" mnemonicParsing="false" text="Limpiar" />
                                          <Button fx:id="btnBuscar" mnemonicParsing="false" text="Buscar" />
                                       </buttons>
                                    </ButtonBar>
                                 </items></ToolBar>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
               <padding>
                  <Insets bottom="5.0" />
               </padding>
          </TitledPane>
        </panes>
      </Accordion>
   </top>
   <bottom>
      <ButtonBar fx:id="btnBar" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="btnHelp" mnemonicParsing="false" text="Ayuda" ButtonBar.buttonData="LEFT" />
            <Button fx:id="btnNew" mnemonicParsing="false" text="Nuevo" />
        </buttons>
         <padding>
            <Insets top="5.0" />
         </padding>
      </ButtonBar>
   </bottom>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</BorderPane>
